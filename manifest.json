{
  // Required
  "manifest_version": 1,
  "name": "Sync SoundCloud Music with VK",
  "version": "1",

  // Recommended
  "default_locale": "ru",
  "description": "Синхронизируй, делись и добавляй музыку из набирающей популярность музыкальной платформы SoundCloud в VK. Полностью бесплатно и никакой рекламы.",
  "icons": { "16": "/images/icon16.png",
           "48": "/images/icon48.png",
          "128": "/images/icon128.png" },

  // Pick one (or none)
  "browser_action": {
          "default_icon": {                    // optional
            "16": "images/icon16.png",           // optional
            "48": "images/icon48.png",           // optional
            "128": "images/icon128.png"            // optional
          },
          "default_title": "VSounde",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
        },
